<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#919191" /> <!-- Shadow color -->
            <corners android:radius="8dp" />  <!-- Corner radius -->
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp" /> <!-- Padding for shadow effect -->
        </shape>
    </item>
    <item android:right="0dp" android:left="0dp" android:top="0dp" android:bottom="0.5dp">
        <shape android:shape="rectangle">
            <solid android:color="#e8e8e8"/> <!-- Background color of the box -->
            <corners android:radius="6dp" />  <!-- Corner radius -->
        </shape>
    </item>
</layer-list>
